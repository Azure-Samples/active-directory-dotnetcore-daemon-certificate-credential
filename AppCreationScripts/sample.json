{
  "Sample": {
    "Title": "A .NET Core daemon application that uses a certificate to authenticate with Azure AD and get OAuth 2.0 access tokens to an ASP.NET Core 2.0 Web API",
    "Level": 200,
    "Client": ".NET Core Desktop",
    "Service": "ASP.NET Core Web API",
    "RepositoryUrl": "active-directory-dotnetcore-daemon-certificate-credential"
  },

  /*
    This section describes the Azure AD Applications to configure, and their dependencies
  */
  "AADApps": [
    {
      "Id": "service",
      "Name": "TodoListService-Core-Cert",
      "IsPublicClient": false,
      "Kind":"WebApi",
      "IsAvailableToOtherTenants":false,
      "HomePage": "https://localhost:44351/"
    },
    {
      "Id": "client",
      "Name": "TodoListDaemon-Core-Cert",
      "Certificate": "CN=TodoListDaemonWithCert",
      "IsPublicClient": false,
      "Kind":"Daemon",
      "IsAvailableToOtherTenants":false,
      "Audience": "AzureADMyOrg",
      "UsesROPCOrIWA": false,
      "RequiredResourcesAccess": [
        {
          "Resource": "service",
          "ApplicationPermissions": [ "access_as_application" ]
        }
      ]
    }
  ],

  /*
    This section describes how to update the code in configuration files from the apps coordinates, once the apps
    are created in Azure AD.
    Each section describes a configuration file, for one of the apps, it's type (XML, JSon, plain text), its location
    with respect to the root of the sample, and the mappping (which string in the config file is mapped to which value
  */
  "CodeConfiguration": [
    {
      "App": "service",
      "SettingKind": "Text",
      "SettingFile": "\\..\\TodoListService\\appsettings.json",
      "Mappings": [
        {
          "key": "Domain",
          "value": "$tenantName"
        },
        {
          "key": "TenantId",
          "value": "$tenantId"
        },
        {
          "key": "ClientId",
          "value": "service.AppId"
        }
      ]
    },

    {
      "App": "client",
      "SettingKind": "Text",
      "SettingFile": "\\..\\TodoListDaemonWithCert-Core\\appsettings.json",
      "Mappings": [
        {
          "key": "Tenant",
          "value": "$tenantName"
        },
        {
          "key": "ClientId",
          "value": ".AppId"
        },
        {
          "key": "CertName",
          "value": ".Certificate"
        },
        {
          "key": "TodoListResourceId",
          "value": "service.AppId"
        },
        {
          "key": "TodoListBaseAddress",
          "value": "service.HomePage"
        }
      ]
    }
  ]
}
